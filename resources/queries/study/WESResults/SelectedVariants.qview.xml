<customView xmlns="http://labkey.org/data/xml/queryCustomView">
    <columns>
        <column name="OPTR"/>
        <column name="Date"/>
        <column name="Flagged"/>
        <column name="Hugo_Symbol"/>
        <column name="Protein_Change"/>
        <column name="Variant_Classification"/>
        <column name="1000Genome_AF"/>
        <column name="CGC_Cancer_Somatic_Mut"/>
        <column name="CGC_Mutation_Type"/>
        <column name="Previously_Found_In_COSMIC"/>
    </columns>
    <filters>
        <filter column="Flagged" operator="eq" value="x"/>
    </filters>
    <sorts>
        <sort column="OPTR" descending="false"/>
        <sort column="Hugo_Symbol" descending="false"/>
    </sorts>
</customView>