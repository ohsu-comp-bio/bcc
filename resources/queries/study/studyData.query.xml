        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="" tableDbType="TABLE">
                <javaCustomizer>org.labkey.bcc.query.BCCCustomizer</javaCustomizer>
                <columns>

                </columns>
                <buttonBarOptions position="both" includeStandardButtons="true">
                    <item text="View Specimens" hidden="true">
                        <originalText>View Specimens</originalText>
                    </item>
                    <item text="Manage Dataset" hidden="true">
                        <originalText>Manage Dataset</originalText>
                    </item>
                </buttonBarOptions>
            </table>
        </tables>
    </metadata>
